.container {
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.forgot-box {
  width: 100%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.title {
  text-align: center;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle {
  text-align: center;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 60rpx;
}

/* 步骤指示器 */
.steps {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 60rpx;
}

.step {
  display: flex;
  flex-direction: column;
  align-items: center;
  flex: 1;
}

.step-number {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  color: rgba(255, 255, 255, 0.6);
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 16rpx;
  transition: all 0.3s ease;
}

.step.active .step-number {
  background: rgba(255, 255, 255, 0.9);
  color: #667eea;
}

.step-text {
  font-size: 24rpx;
  color: rgba(255, 255, 255, 0.6);
  text-align: center;
}

.step.active .step-text {
  color: rgba(255, 255, 255, 0.9);
}

.step-line {
  width: 80rpx;
  height: 4rpx;
  background: rgba(255, 255, 255, 0.2);
  margin: 0 20rpx;
  margin-top: -40rpx;
}

/* 步骤内容 */
.step-content {
  display: flex;
  flex-direction: column;
}

.input-group {
  margin-bottom: 30rpx;
  position: relative;
  display: flex;
  align-items: center;
}

.password-group {
  position: relative;
}

.password-toggle {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
  padding: 10rpx;
}

.toggle-icon {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
}

.input {
  flex: 1;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: white;
  box-sizing: border-box;
}

.input::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

/* 用户信息显示 */
.user-info {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
}

.user-name {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.phone-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
}

/* 密码提示 */
.password-tips {
  margin-bottom: 30rpx;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 16rpx;
}

.tips-text {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  line-height: 1.5;
}

/* 按钮 */
.next-btn {
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.next-btn:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.3);
}

/* 返回登录 */
.back-login {
  margin-top: 40rpx;
  text-align: center;
}

.back-text {
  color: rgba(255, 255, 255, 0.7);
  font-size: 28rpx;
  padding: 20rpx;
  cursor: pointer;
}

.back-text:active {
  opacity: 0.7;
} 