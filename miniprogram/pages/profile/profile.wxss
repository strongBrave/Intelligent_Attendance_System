/* 个人信息页面样式 */
.profile-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 用户信息卡片 */
.user-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  backdrop-filter: blur(10rpx);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-image {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}

.avatar-placeholder {
  width: 100%;
  height: 100%;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  display: flex;
  align-items: center;
  justify-content: center;
  border-radius: 50%;
}

.avatar-text {
  color: white;
  font-size: 48rpx;
  font-weight: bold;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-phone {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.user-department {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}



/* 功能菜单 */
.menu-section {
  margin-bottom: 30rpx;
}

.menu-group {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(255, 255, 255, 0.1);
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.face-icon {
  background: rgba(76, 175, 80, 0.2);
  color: #4CAF50;
}

.department-icon {
  background: rgba(156, 39, 176, 0.2);
  color: #9C27B0;
}

.history-icon {
  background: rgba(33, 150, 243, 0.2);
  color: #2196F3;
}

.settings-icon {
  background: rgba(158, 158, 158, 0.2);
  color: #9E9E9E;
}

.icon-text {
  font-size: 28rpx;
}

.menu-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.menu-title {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.menu-subtitle {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
}

.menu-arrow {
  color: rgba(255, 255, 255, 0.6);
}

.arrow-text {
  font-size: 32rpx;
  font-weight: bold;
}

/* 今日考勤状态 */
.today-status-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.section-header {
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.2);
  padding-bottom: 15rpx;
}

.section-title {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.status-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.status-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
}

.status-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.signin-icon {
  background: rgba(76, 175, 80, 0.2);
  color: #4CAF50;
}

.signout-icon {
  background: rgba(255, 152, 0, 0.2);
  color: #FF9800;
}

.absent-icon {
  background: rgba(244, 67, 54, 0.2);
  color: #F44336;
}

.status-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.status-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-bottom: 5rpx;
}

.status-time {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.1);
}

.status-badge.normal {
  background: rgba(76, 175, 80, 0.2);
  color: #4CAF50;
}

.status-badge.late {
  background: rgba(255, 152, 0, 0.2);
  color: #FF9800;
}

.status-badge.absent {
  background: rgba(244, 67, 54, 0.2);
  color: #F44336;
}

.status-badge.early_leave {
  background: rgba(156, 39, 176, 0.2);
  color: #9C27B0;
}

.badge-text {
  font-size: 22rpx;
  font-weight: bold;
}

/* 快捷操作 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-item {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.2);
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.action-text {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 底部操作 */
.bottom-actions {
  padding: 20rpx 0;
}

.logout-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  border: none;
  background: rgba(244, 67, 54, 0.2);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.logout-btn:active {
  transform: scale(0.95);
  background: rgba(244, 67, 54, 0.3);
}

.btn-text {
  color: #F44336;
  font-size: 28rpx;
  font-weight: bold;
}

/* 人脸更新申请状态 */
.face-request-status {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.request-card {
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
  padding: 20rpx;
}

.request-info {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.request-status {
  align-self: flex-start;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 22rpx;
  font-weight: bold;
}

.request-status.pending {
  background: rgba(255, 152, 0, 0.2);
  color: #FF9800;
}

.request-status.approved {
  background: rgba(76, 175, 80, 0.2);
  color: #4CAF50;
}

.request-status.rejected {
  background: rgba(244, 67, 54, 0.2);
  color: #F44336;
}

.status-text {
  font-size: 22rpx;
  font-weight: bold;
}

.request-details {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.request-reason, .request-time, .admin-comment {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  line-height: 1.4;
}

/* 人脸更新弹窗 */
.face-update-modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
  justify-content: center;
}

.modal-overlay {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.5);
  backdrop-filter: blur(10rpx);
}

.modal-content {
  width: 90%;
  max-width: 600rpx;
  background: white;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
  z-index: 1001;
}

.modal-header {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}

.modal-title {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.modal-close {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
}

.close-text {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.modal-body {
  padding: 30rpx;
}

/* 照片上传区域 */
.upload-section {
  margin-bottom: 30rpx;
}

.upload-label {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  display: block;
}

.upload-area {
  width: 100%;
  height: 200rpx;
  border: 2rpx dashed #ddd;
  border-radius: 16rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.upload-area:active {
  border-color: #667eea;
  background: rgba(102, 126, 234, 0.05);
}

.preview-image {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
}

.upload-placeholder {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.upload-text {
  font-size: 60rpx;
  color: #ccc;
}

.upload-hint {
  color: #999;
  font-size: 24rpx;
}

.upload-area.disabled {
  border-color: #f0f0f0;
  background: #f9f9f9;
  opacity: 0.6;
}

.upload-area.disabled .upload-text {
  color: #ddd;
}

.upload-area.disabled .upload-hint {
  color: #ccc;
}

/* 多张图片预览样式 */
.images-preview {
  margin-bottom: 20rpx;
}

.preview-grid {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 15rpx;
  margin-bottom: 15rpx;
}

.preview-item {
  position: relative;
  width: 100%;
  height: 150rpx;
  border-radius: 12rpx;
  overflow: hidden;
  border: 2rpx solid #eee;
}

.preview-item .preview-image {
  width: 100%;
  height: 100%;
  object-fit: cover;
}

.remove-btn {
  position: absolute;
  top: 8rpx;
  right: 8rpx;
  width: 36rpx;
  height: 36rpx;
  border-radius: 50%;
  background: rgba(244, 67, 54, 0.8);
  display: flex;
  align-items: center;
  justify-content: center;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  transition: all 0.3s ease;
}

.remove-btn:active {
  transform: scale(0.9);
  background: rgba(244, 67, 54, 1);
}

.remove-text {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  line-height: 1;
}

.image-count {
  text-align: center;
  color: #666;
  font-size: 24rpx;
  padding: 10rpx;
  background: rgba(102, 126, 234, 0.05);
  border-radius: 8rpx;
}

/* 申请原因输入 */
.reason-section {
  margin-bottom: 30rpx;
}

.reason-label {
  color: #333;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 15rpx;
  display: block;
}

.reason-input {
  width: 100%;
  min-height: 120rpx;
  padding: 20rpx;
  border: 2rpx solid #eee;
  border-radius: 16rpx;
  font-size: 26rpx;
  color: #333;
  line-height: 1.4;
  resize: none;
  box-sizing: border-box;
}

.reason-input:focus {
  border-color: #667eea;
  outline: none;
}

.char-count {
  text-align: right;
  color: #999;
  font-size: 22rpx;
  margin-top: 10rpx;
  display: block;
}

/* 弹窗底部按钮 */
.modal-footer {
  display: flex;
  border-top: 2rpx solid #eee;
}

.cancel-btn, .submit-btn {
  flex: 1;
  height: 80rpx;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 28rpx;
  font-weight: bold;
  transition: all 0.3s ease;
}

.cancel-btn {
  background: #f5f5f5;
  color: #999;
  border-radius: 0 0 0 20rpx;
}

.cancel-btn:active {
  background: #eee;
}

.submit-btn {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border-radius: 0 0 20rpx 0;
}

.submit-btn:active {
  opacity: 0.8;
}

.submit-btn:disabled {
  background: #ccc;
  color: #999;
} 