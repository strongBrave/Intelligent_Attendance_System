/* 个人信息页面样式 */
.profile-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
}

/* 用户信息卡片 */
.user-card {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 40rpx;
  margin-bottom: 30rpx;
  display: flex;
  align-items: center;
  backdrop-filter: blur(10rpx);
}

.user-avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
  overflow: hidden;
  margin-right: 30rpx;
  border: 4rpx solid rgba(255, 255, 255, 0.3);
}

.avatar-image {
  width: 100%;
  height: 100%;
}

.user-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.user-name {
  color: white;
  font-size: 36rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.user-phone {
  color: rgba(255, 255, 255, 0.8);
  font-size: 28rpx;
  margin-bottom: 8rpx;
}

.user-department {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
}

/* 人脸信息展示 */
.face-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.face-content {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.face-image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 16rpx;
  border: 3rpx solid rgba(255, 255, 255, 0.3);
}

.face-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.face-status {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.face-tip {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
  line-height: 1.4;
}

/* 功能菜单 */
.menu-section {
  margin-bottom: 30rpx;
}

.menu-group {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  overflow: hidden;
  backdrop-filter: blur(10rpx);
}

.menu-item {
  display: flex;
  align-items: center;
  padding: 30rpx;
  border-bottom: 1rpx solid rgba(255, 255, 255, 0.1);
  transition: all 0.3s ease;
}

.menu-item:last-child {
  border-bottom: none;
}

.menu-item:active {
  background: rgba(255, 255, 255, 0.1);
}

.menu-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.face-icon {
  background: rgba(76, 175, 80, 0.2);
  color: #4CAF50;
}

.department-icon {
  background: rgba(156, 39, 176, 0.2);
  color: #9C27B0;
}

.history-icon {
  background: rgba(33, 150, 243, 0.2);
  color: #2196F3;
}

.settings-icon {
  background: rgba(158, 158, 158, 0.2);
  color: #9E9E9E;
}

.icon-text {
  font-size: 28rpx;
}

.menu-content {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.menu-title {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.menu-subtitle {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
}

.menu-arrow {
  color: rgba(255, 255, 255, 0.6);
}

.arrow-text {
  font-size: 32rpx;
  font-weight: bold;
}

/* 今日考勤状态 */
.today-status-section {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  backdrop-filter: blur(10rpx);
}

.section-header {
  margin-bottom: 20rpx;
  border-bottom: 2rpx solid rgba(255, 255, 255, 0.2);
  padding-bottom: 15rpx;
}

.section-title {
  color: white;
  font-size: 32rpx;
  font-weight: bold;
}

.status-content {
  display: flex;
  flex-direction: column;
  gap: 15rpx;
}

.status-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background: rgba(255, 255, 255, 0.05);
  border-radius: 16rpx;
}

.status-icon {
  width: 50rpx;
  height: 50rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 20rpx;
}

.signin-icon {
  background: rgba(76, 175, 80, 0.2);
  color: #4CAF50;
}

.signout-icon {
  background: rgba(255, 152, 0, 0.2);
  color: #FF9800;
}

.absent-icon {
  background: rgba(244, 67, 54, 0.2);
  color: #F44336;
}

.status-info {
  flex: 1;
  display: flex;
  flex-direction: column;
}

.status-label {
  color: rgba(255, 255, 255, 0.8);
  font-size: 24rpx;
  margin-bottom: 5rpx;
}

.status-time {
  color: white;
  font-size: 28rpx;
  font-weight: bold;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  background: rgba(255, 255, 255, 0.1);
}

.status-badge.normal {
  background: rgba(76, 175, 80, 0.2);
  color: #4CAF50;
}

.status-badge.late {
  background: rgba(255, 152, 0, 0.2);
  color: #FF9800;
}

.status-badge.absent {
  background: rgba(244, 67, 54, 0.2);
  color: #F44336;
}

.status-badge.early_leave {
  background: rgba(156, 39, 176, 0.2);
  color: #9C27B0;
}

.badge-text {
  font-size: 22rpx;
  font-weight: bold;
}

/* 快捷操作 */
.quick-actions {
  display: grid;
  grid-template-columns: repeat(3, 1fr);
  gap: 20rpx;
  margin-bottom: 30rpx;
}

.action-item {
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 30rpx 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.action-item:active {
  transform: scale(0.95);
  background: rgba(255, 255, 255, 0.2);
}

.action-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.2);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 15rpx;
}

.action-text {
  color: white;
  font-size: 24rpx;
  font-weight: bold;
}

/* 底部操作 */
.bottom-actions {
  padding: 20rpx 0;
}

.logout-btn {
  width: 100%;
  height: 80rpx;
  border-radius: 40rpx;
  border: none;
  background: rgba(244, 67, 54, 0.2);
  backdrop-filter: blur(10rpx);
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.logout-btn:active {
  transform: scale(0.95);
  background: rgba(244, 67, 54, 0.3);
}

.btn-text {
  color: #F44336;
  font-size: 28rpx;
  font-weight: bold;
} 