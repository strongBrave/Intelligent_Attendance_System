.container {
  padding: 60rpx 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  min-height: 100vh;
}

.login-box {
  width: 100%;
  max-width: 600rpx;
  background: rgba(255, 255, 255, 0.1);
  border-radius: 20rpx;
  padding: 60rpx 40rpx;
  backdrop-filter: blur(10rpx);
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.1);
}

.title {
  text-align: center;
  font-size: 48rpx;
  font-weight: bold;
  color: white;
  margin-bottom: 20rpx;
}

.subtitle {
  text-align: center;
  font-size: 28rpx;
  color: rgba(255, 255, 255, 0.8);
  margin-bottom: 60rpx;
}

.form {
  display: flex;
  flex-direction: column;
}

.input-group {
  margin-bottom: 30rpx;
  position: relative;
}

.password-group {
  position: relative;
}

.password-toggle {
  position: absolute;
  right: 24rpx;
  top: 50%;
  transform: translateY(-50%);
  z-index: 10;
  padding: 10rpx;
}

.captcha-group {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.captcha-input {
  flex: 1;
}

.captcha-image-container {
  width: 200rpx;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  overflow: hidden;
  display: flex;
  align-items: center;
  justify-content: center;
}

.captcha-image {
  width: 100%;
  height: 100%;
}

.captcha-loading {
  display: flex;
  align-items: center;
  justify-content: center;
  width: 100%;
  height: 100%;
}

.loading-text {
  color: rgba(255, 255, 255, 0.6);
  font-size: 24rpx;
}

.toggle-icon {
  font-size: 32rpx;
  color: rgba(255, 255, 255, 0.8);
}

.input {
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.1);
  border: 2rpx solid rgba(255, 255, 255, 0.2);
  border-radius: 16rpx;
  padding: 0 24rpx;
  font-size: 32rpx;
  color: white;
  box-sizing: border-box;
}

.input::placeholder {
  color: rgba(255, 255, 255, 0.6);
}

.login-btn {
  width: 100%;
  height: 88rpx;
  background: rgba(255, 255, 255, 0.2);
  color: white;
  border: none;
  border-radius: 16rpx;
  font-size: 32rpx;
  font-weight: bold;
  margin-top: 40rpx;
  backdrop-filter: blur(10rpx);
  transition: all 0.3s ease;
}

.login-btn:active {
  transform: scale(0.98);
  background: rgba(255, 255, 255, 0.3);
}

.tips {
  margin-top: 30rpx;
  text-align: center;
}

.tips-text {
  color: rgba(255, 255, 255, 0.7);
  font-size: 24rpx;
}

.forgot-password {
  margin-top: 20rpx;
  text-align: center;
}

.forgot-text {
  color: #007AFF;
  font-size: 28rpx;
  padding: 10rpx;
  cursor: pointer;
}

.forgot-text:active {
  opacity: 0.7;
}

.verify-row {
  width: 100%;
  display: flex;
  align-items: center;
  margin-bottom: 32rpx;
}
.verify-row input {
  flex: 1;
}
.verify-row button {
  margin-left: 16rpx;
  background: #007AFF;
  color: #fff;
  border-radius: 12rpx;
}
button[type=primary] {
  width: 100%;
  height: 88rpx;
  background: #007AFF;
  color: #fff;
  border-radius: 16rpx;
  font-size: 32rpx;
  margin-top: 32rpx;
  box-shadow: 0 4rpx 16rpx #b3d8ff;
}
button {
  width: 100%;
  height: 88rpx;
  border-radius: 16rpx;
  font-size: 32rpx;
  margin-top: 16rpx;
}
.navigator {
  margin-top: 32rpx;
  color: #007AFF;
  font-size: 28rpx;
} 