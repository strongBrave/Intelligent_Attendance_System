/* 签到/签退界面样式 */
.attendance-container {
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  padding: 20rpx;
  box-sizing: border-box;
}

/* 顶部信息栏 */
.header {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.user-info {
  display: flex;
  flex-direction: column;
}

.user-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.department {
  font-size: 28rpx;
  color: #666;
}

.time-info {
  text-align: right;
}

.current-time {
  display: block;
  font-size: 40rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.current-date {
  display: block;
  font-size: 28rpx;
  color: #666;
}

/* 距离状态显示 */
.distance-status {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.status-indicator {
  display: flex;
  align-items: center;
  gap: 20rpx;
}

.status-indicator.in-range {
  border-left: 8rpx solid #52c41a;
}

.status-indicator.out-range {
  border-left: 8rpx solid #ff4d4f;
}

.status-icon {
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.in-range .status-icon {
  background: #f6ffed;
  color: #52c41a;
}

.out-range .status-icon {
  background: #fff2f0;
  color: #ff4d4f;
}

.status-text {
  flex: 1;
}

.status-message {
  display: block;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 8rpx;
}

.in-range .status-message {
  color: #52c41a;
}

.out-range .status-message {
  color: #ff4d4f;
}

.threshold-info {
  display: block;
  font-size: 24rpx;
  color: #999;
}

/* 地图显示区域 */
.map-section {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

/* 搜索功能样式 */
.search-section {
  margin-bottom: 20rpx;
}

.search-input-group {
  display: flex;
  align-items: center;
  gap: 10rpx;
  margin-bottom: 15rpx;
}

.search-input {
  flex: 1;
  height: 70rpx;
  padding: 0 20rpx;
  border: 2rpx solid #e8e8e8;
  border-radius: 35rpx;
  font-size: 28rpx;
  background: white;
}

.search-btn {
  width: 70rpx;
  height: 70rpx;
  border-radius: 50%;
  background: #1890ff;
  color: white;
  border: none;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
}

.search-results {
  max-height: 400rpx;
  overflow-y: auto;
  background: white;
  border-radius: 15rpx;
  border: 2rpx solid #e8e8e8;
}

.search-result-item {
  padding: 20rpx;
  border-bottom: 1rpx solid #f0f0f0;
  cursor: pointer;
}

.search-result-item:last-child {
  border-bottom: none;
}

.search-result-item:active {
  background: #f5f5f5;
}

.result-name {
  font-size: 30rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 8rpx;
}

.result-address {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 5rpx;
}

.result-distance {
  font-size: 24rpx;
  color: #999;
}

.map-container {
  border-radius: 15rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.map-controls {
  display: flex;
  justify-content: center;
}

.control-btn {
  background: #1890ff;
  color: white;
  border: none;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

/* 地图切换按钮 */
.map-toggle {
  display: flex;
  justify-content: center;
  margin-bottom: 20rpx;
}

.toggle-btn {
  background: rgba(255, 255, 255, 0.9);
  color: #1890ff;
  border: 2rpx solid #1890ff;
  border-radius: 50rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  display: flex;
  align-items: center;
  gap: 10rpx;
}

/* 今日考勤状态 */
.today-status {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.status-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 20rpx;
  text-align: center;
}

.status-content {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.status-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 20rpx;
  background: #f8f9fa;
  border-radius: 15rpx;
}

.status-label {
  font-size: 28rpx;
  color: #666;
  min-width: 160rpx;
}

.status-value {
  font-size: 28rpx;
  font-weight: bold;
  flex: 1;
  text-align: center;
}

.status-value.has-time {
  color: #52c41a;
}

.status-value.no-time {
  color: #999;
}

.status-badge {
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: white;
  margin-left: 20rpx;
}

.status-badge.normal {
  background: #52c41a;
}

.status-badge.late {
  background: #faad14;
}

.status-badge.absent {
  background: #ff4d4f;
}

.status-badge.early-leave {
  background: #fa8c16;
}

/* 打卡按钮区域 */
.attendance-buttons {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.status-tip {
  margin-bottom: 30rpx;
}

.tip-content {
  display: flex;
  align-items: center;
  gap: 15rpx;
  padding: 20rpx;
  border-radius: 15rpx;
  font-size: 28rpx;
}

.tip-content.error {
  background: #fff2f0;
  color: #ff4d4f;
  border: 2rpx solid #ffccc7;
}

.tip-content.warning {
  background: #fffbe6;
  color: #faad14;
  border: 2rpx solid #ffe58f;
}

.attendance-btn {
  width: 100%;
  height: 120rpx;
  border-radius: 20rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 20rpx;
  font-size: 32rpx;
  font-weight: bold;
  border: none;
  position: relative;
  overflow: hidden;
}

.attendance-btn.active {
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  box-shadow: 0 8rpx 25rpx rgba(102, 126, 234, 0.4);
}

.attendance-btn.disabled {
  background: #f5f5f5;
  color: #ccc;
}

.btn-icon {
  font-size: 40rpx;
}

.btn-text {
  font-size: 32rpx;
}

.btn-time {
  position: absolute;
  right: 30rpx;
  font-size: 24rpx;
  opacity: 0.8;
}

.sign-in-btn.active {
  background: linear-gradient(135deg, #52c41a 0%, #73d13d 100%);
  box-shadow: 0 8rpx 25rpx rgba(82, 196, 26, 0.4);
}

.sign-out-btn.active {
  background: linear-gradient(135deg, #1890ff 0%, #40a9ff 100%);
  box-shadow: 0 8rpx 25rpx rgba(24, 144, 255, 0.4);
}

.face-btn.active {
  background: linear-gradient(135deg, #722ed1 0%, #9254de 100%);
  box-shadow: 0 8rpx 25rpx rgba(114, 46, 209, 0.4);
}

/* 位置信息 */
.location-info {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 20rpx;
  padding: 30rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.1);
}

.location-item {
  display: flex;
  align-items: center;
  margin-bottom: 15rpx;
}

.location-item:last-child {
  margin-bottom: 0;
}

.location-label {
  font-size: 28rpx;
  color: #666;
  min-width: 160rpx;
}

.location-value {
  font-size: 28rpx;
  color: #333;
  flex: 1;
  word-break: break-all;
}

/* 图标字体 */
.iconfont {
  font-family: "iconfont";
}

.icon-success::before {
  content: "✓";
}

.icon-error::before {
  content: "✗";
}

.icon-warning::before {
  content: "⚠";
}

.icon-refresh::before {
  content: "🔄";
}

.icon-map::before {
  content: "🗺";
}

.icon-search::before {
  content: "🔍";
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .header {
    flex-direction: column;
    gap: 20rpx;
    text-align: center;
  }
  
  .time-info {
    text-align: center;
  }
  
  .status-item {
    flex-direction: column;
    gap: 10rpx;
    text-align: center;
  }
  
  .status-label {
    min-width: auto;
  }
  
  .location-item {
    flex-direction: column;
    gap: 10rpx;
    text-align: center;
  }
  
  .location-label {
    min-width: auto;
  }
}

/* 人脸打卡弹窗样式 */
.face-modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.3);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
  overflow: hidden;
}

/* 彩色闪烁背景 */
.colorful-background {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  z-index: 1;
}

.color-dot {
  position: absolute;
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  opacity: 0.6;
  animation: colorPulse 3s ease-in-out infinite;
}

.dot1 {
  top: 10%;
  left: 10%;
  background: linear-gradient(45deg, #ff6b6b, #ff8e8e);
  animation-delay: 0s;
}

.dot2 {
  top: 20%;
  right: 15%;
  background: linear-gradient(45deg, #4ecdc4, #6ee7df);
  animation-delay: 0.5s;
}

.dot3 {
  bottom: 30%;
  left: 20%;
  background: linear-gradient(45deg, #45b7d1, #67c9e1);
  animation-delay: 1s;
}

.dot4 {
  bottom: 20%;
  right: 10%;
  background: linear-gradient(45deg, #96ceb4, #b8e0c8);
  animation-delay: 1.5s;
}

.dot5 {
  top: 50%;
  left: 5%;
  background: linear-gradient(45deg, #feca57, #ffd976);
  animation-delay: 2s;
}

.dot6 {
  top: 60%;
  right: 5%;
  background: linear-gradient(45deg, #ff9ff3, #ffb3f3);
  animation-delay: 2.5s;
}

.face-modal {
  position: relative;
  width: 90vw;
  height: 90vw;
  max-width: 650rpx;
  max-height: 650rpx;
  background: transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  border-radius: 20rpx;
  overflow: hidden;
  z-index: 10;
}

.face-camera {
  width: 90vw;
  height: 90vw;
  max-width: 650rpx;
  max-height: 650rpx;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  top: 0; left: 0;
  box-shadow: 0 0 60rpx rgba(255,255,255,0.4);
  border: 6rpx solid rgba(255,255,255,0.8);
}

.circle-mask {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  margin: auto;
  width: 90vw;
  height: 90vw;
  max-width: 650rpx;
  max-height: 650rpx;
  border-radius: 50%;
  box-shadow: 0 0 0 9999px rgba(0,0,0,0.4);
  pointer-events: none;
  border: 4rpx solid rgba(255,255,255,0.5);
}

/* 顶部状态栏 */
.face-modal-header {
  position: absolute;
  top: 40rpx;
  left: 0; right: 0;
  z-index: 15;
}

.header-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
}

.face-modal-title {
  color: #fff;
  font-size: 36rpx;
  font-weight: 600;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.8);
  letter-spacing: 2rpx;
}

.timer-container {
  display: flex;
  align-items: center;
  gap: 10rpx;
  background: rgba(255,255,255,0.2);
  padding: 12rpx 24rpx;
  border-radius: 30rpx;
  backdrop-filter: blur(10rpx);
  border: 2rpx solid rgba(255,255,255,0.3);
}

.timer-icon {
  font-size: 28rpx;
  color: #fff;
}

.face-modal-timer {
  color: #fff;
  font-size: 32rpx;
  font-weight: 600;
  font-family: 'Courier New', monospace;
}

/* 状态提示区域 */
.face-modal-status {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  z-index: 20;
  animation: statusFadeIn 0.5s ease-out;
}

.status-container {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 20rpx;
  background: rgba(255,255,255,0.95);
  padding: 40rpx 60rpx;
  border-radius: 20rpx;
  box-shadow: 0 8rpx 32rpx rgba(0,0,0,0.3);
  backdrop-filter: blur(10rpx);
  min-width: 300rpx;
}

.status-container.success {
  border: 3rpx solid #52c41a;
}

.status-container.fail {
  border: 3rpx solid #ff4d4f;
}

.status-container.timeout {
  border: 3rpx solid #faad14;
}

.status-icon {
  font-size: 80rpx;
  line-height: 1;
}

.icon-success {
  color: #52c41a;
}

.icon-error {
  color: #ff4d4f;
}

.icon-timeout {
  color: #faad14;
}

.status-text {
  font-size: 32rpx;
  font-weight: 600;
  text-align: center;
}

.success-text {
  color: #52c41a;
}

.fail-text {
  color: #ff4d4f;
}

.timeout-text {
  color: #faad14;
}

/* 底部操作 */
.face-modal-footer {
  position: absolute;
  bottom: 40rpx;
  left: 0; right: 0;
  z-index: 15;
  display: flex;
  justify-content: center;
}

.face-modal-exit {
  background: rgba(255,255,255,0.9);
  color: #333;
  border: none;
  border-radius: 40rpx;
  padding: 20rpx 40rpx;
  font-size: 28rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  gap: 10rpx;
  box-shadow: 0 4rpx 16rpx rgba(0,0,0,0.2);
  transition: all 0.3s ease;
}

.face-modal-exit:active {
  transform: scale(0.95);
  background: rgba(255,255,255,1);
}

.exit-icon {
  font-size: 24rpx;
  font-weight: bold;
}

.exit-text {
  font-size: 28rpx;
}

/* 引导提示 */
.face-modal-guide {
  position: absolute;
  bottom: 120rpx;
  left: 0; right: 0;
  z-index: 15;
  pointer-events: none;
}

.guide-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 10rpx;
}

.guide-text {
  color: rgba(255,255,255,0.9);
  font-size: 28rpx;
  font-weight: 500;
  text-align: center;
  text-shadow: 0 2rpx 8rpx rgba(0,0,0,0.8);
  background: rgba(0,0,0,0.3);
  padding: 12rpx 24rpx;
  border-radius: 20rpx;
  backdrop-filter: blur(10rpx);
}

/* 动画效果 */
@keyframes statusFadeIn {
  from {
    opacity: 0;
    transform: translate(-50%, -50%) scale(0.8);
  }
  to {
    opacity: 1;
    transform: translate(-50%, -50%) scale(1);
  }
}

@keyframes colorPulse {
  0%, 100% {
    transform: scale(1) rotate(0deg);
    opacity: 0.6;
  }
  25% {
    transform: scale(1.1) rotate(90deg);
    opacity: 0.8;
  }
  50% {
    transform: scale(0.9) rotate(180deg);
    opacity: 0.4;
  }
  75% {
    transform: scale(1.05) rotate(270deg);
    opacity: 0.7;
  }
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .face-modal {
    width: 95vw;
    height: 95vw;
    max-width: 600rpx;
    max-height: 600rpx;
  }
  
  .face-camera {
    width: 95vw;
    height: 95vw;
    max-width: 600rpx;
    max-height: 600rpx;
  }
  
  .circle-mask {
    width: 95vw;
    height: 95vw;
    max-width: 600rpx;
    max-height: 600rpx;
  }
  
  .face-modal-title {
    font-size: 32rpx;
  }
  
  .guide-text {
    font-size: 24rpx;
  }
}

/* 人脸检测Canvas覆盖层 */
.face-detection-canvas {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
  pointer-events: none; /* 允许点击穿透到下层 */
  background: transparent;
}

/* 人脸检测框样式 */
.face-box {
  position: absolute;
  border: 2px solid #00ff00;
  border-radius: 4px;
  background: rgba(0, 255, 0, 0.1);
  box-shadow: 0 0 10px rgba(0, 255, 0, 0.5);
  animation: faceBoxPulse 1.5s ease-in-out infinite;
}

@keyframes faceBoxPulse {
  0%, 100% {
    opacity: 0.7;
    transform: scale(1);
  }
  50% {
    opacity: 1;
    transform: scale(1.05);
  }
}

/* 检测状态样式 */
.detection-status {
  display: block;
  margin-top: 8px;
  font-size: 14px;
  color: #00ff00;
  text-align: center;
  animation: statusPulse 1.5s ease-in-out infinite;
}

@keyframes statusPulse {
  0%, 100% {
    opacity: 0.7;
  }
  50% {
    opacity: 1;
  }
} 