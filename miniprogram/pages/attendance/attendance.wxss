/* ÂìçÂ∫îÂºèËÆæËÆ° */
@media (max-width: 750rpx) {
  .header {
    flex-direction: column;
    gap: 20rpx;
    text-align: center;
  }
  
  .time-info {
    text-align: center;
  }
  
  .status-item {
    flex-direction: column;
    gap: 10rpx;
    text-align: center;
  }
  
  .status-label {
    min-width: auto;
  }
  
  .location-item {
    flex-direction: column;
    gap: 10rpx;
    text-align: center;
  }
  
  .location-label {
    min-width: auto;
  }
}

.face-modal-mask {
  position: fixed;
  top: 0; left: 0; right: 0; bottom: 0;
  background: rgba(0,0,0,0.7);
  z-index: 9999;
  display: flex;
  align-items: center;
  justify-content: center;
}

.face-modal {
  position: relative;
  width: 90vw;
  height: 90vw;
  max-width: 600rpx;
  max-height: 600rpx;
  background: transparent;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.face-camera {
  width: 90vw;
  height: 90vw;
  max-width: 600rpx;
  max-height: 600rpx;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  top: 0; left: 0;
}

.circle-mask {
  position: absolute;
  top: 0; left: 0; right: 0; bottom: 0;
  margin: auto;
  width: 90vw;
  height: 90vw;
  max-width: 600rpx;
  max-height: 600rpx;
  border-radius: 50%;
  box-shadow: 0 0 0 9999px rgba(0,0,0,0.7);
  pointer-events: none;
}

.face-modal-header {
  position: absolute;
  top: 20rpx;
  left: 0; right: 0;
  text-align: center;
  z-index: 2;
}

.face-modal-title {
  color: #fff;
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
}

.face-modal-timer {
  color: #fff;
  font-size: 28rpx;
  margin-left: 20rpx;
}

.face-modal-footer {
  position: absolute;
  bottom: 30rpx;
  left: 0; right: 0;
  text-align: center;
  z-index: 2;
}

.face-modal-exit {
  background: rgba(255,255,255,0.8);
  color: #333;
  border: none;
  border-radius: 30rpx;
  padding: 16rpx 48rpx;
  font-size: 28rpx;
  font-weight: bold;
}

.face-modal-tip {
  position: absolute;
  bottom: 100rpx;
  left: 0; right: 0;
  text-align: center;
  z-index: 2;
}

.fail-text {
  color: #ff4d4f;
  font-size: 32rpx;
  font-weight: bold;
}

.timeout-text {
  color: #faad14;
  font-size: 32rpx;
  font-weight: bold;
}

.success-text {
  color: #52c41a;
  font-size: 32rpx;
  font-weight: bold;
}

.pending-text {
  color: #1890ff;
  font-size: 32rpx;
  font-weight: bold;
} 